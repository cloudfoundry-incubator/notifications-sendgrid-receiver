#! /usr/bin/env bash
set -e

DIR=$(dirname $0)

if [[ -z "$ENVIRONMENT" ]]; then
    ENVIRONMENT=ci
fi

GREEN="\033[0;32m"
RED="\033[0;31m"
NONE="\033[0m"

source $DIR/env/$ENVIRONMENT

function run() {
  set +e
  go test -v $@
  EXIT_CODE=$?
  set -e
}

if [[ -z "$1" ]]; then
    run ./...
else
    run $@
fi

if [[ $EXIT_CODE = 0 ]]; then
    STATE="${GREEN}UNIT SUITE PASS${NONE}"
else
    STATE="${RED}UNIT SUITE FAIL${NONE}"
fi

echo
echo -e $STATE

exit $EXIT_CODE
